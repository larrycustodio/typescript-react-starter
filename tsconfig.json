{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "jsx": "react",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules"]
}